void setup()
{
servoH.attach(9);
servoV.attach(10);
Serial.begin(9600);
servoH.write(positionH);
servoV.write(positionV);
delay(2000);
}
void loop()
{
//servoH.write(positionH);
//servoV.write(positionV);
for(int i=0; i<75; i=i+1){
positionH=map(azimute1[i], 98.98, 3.27, 0, 90);
servoH.write(positionH);
Serial.println(azimute1[i]);
Serial.println(positionH);
delay(50);
positionV=map(elevacao1[i], 110, 10, 0, 90);
